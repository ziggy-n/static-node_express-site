extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9


        h1 #{project_name}


        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies


        ul 
          each val in technologies
            li= val


        a.button.expanded(href=`${live_link}` target="_blank") Live Demo
        a.button.expanded(href=`${github_link}`) GitHub Repo
    
 
    img.image(src=`/static/${imageloc}_2.png`)
    img.image(src=`/static/${imageloc}_3.png`)
    img.image(src=`/static/${imageloc}_4.png`)
      
      
      
      
